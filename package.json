{
  "name": "chrisgpt-desktop-app",
  "version": "1.0.0",
  "main": "main.js",
  "description": "ChrisGPT - AI Sales Coach Desktop App",
  "author": "ChrisGPT",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac"
  },
  "build": {
    "appId": "com.chrisgpt.app",
    "productName": "ChrisGPT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "icons/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ChrisGPT"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^33.3.1",
    "electron-builder": "^26.7.0"
  }
}
